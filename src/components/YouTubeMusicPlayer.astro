---
interface Props {
  videoId: string
}
const { videoId } = Astro.props
---
<div class="youtube-player overflow-hidden rounded">
  <iframe
    src={`https://www.youtube-nocookie.com/embed/${videoId}?modestbranding=1&controls=1`}
    title="YouTube Music"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    loading="lazy"
    class="w-full h-20 sm:h-24"
  ></iframe>
</div>

