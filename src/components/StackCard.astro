---
type Props = {
  text: string
  icon: string
  href: string
}

const { text, icon, href } = Astro.props
---

<a href={href} target="_blank" class="w-fit px-3 py-2 rounded border flex gap-2 items-center border-gray-200 dark:border-gray-700">
  <svg height={20} width={20}>
    <use href={`/stack.svg#${icon}`}></use>
  </svg>
  <span class="text-sm capitalize text-gray-600 dark:text-gray-400">
    {text}
  </span>
</a>
